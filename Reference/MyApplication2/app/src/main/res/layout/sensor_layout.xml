<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/sensor_state_name_frag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:text="@string/NoSensor"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/sensor_count_name_frag"
        app:layout_constraintTop_toBottomOf="@+id/sensor_count_name_frag" />

    <TextView
        android:id="@+id/sensor_count_name_frag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/sensor_state_name_frag"
        android:layout_below="@+id/sensor_state_name_frag"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/NoSensor"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sensor_state_frag"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_above="@+id/sensor_count_name_frag"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/NoSignal"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/sensor_count_name_frag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toEndOf="@+id/sensor_count_name_frag" />

    <TextView
        android:id="@+id/sensor_count_frag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sensor_count_name_frag"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/NoSignal"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/sensor_state_name_frag"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toEndOf="@+id/sensor_state_name_frag" />

    <ListView
        android:id="@+id/sensor_count_container_frag"
        android:layout_width="match_parent"
        android:layout_height="347dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sensor_count_name_frag"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/sensor_count_container_name_frag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="센서 카운트 누적 값"
        app:layout_constraintBottom_toTopOf="@+id/sensor_count_container_frag"
        app:layout_constraintStart_toStartOf="@+id/sensor_state_name_frag"
        app:layout_constraintTop_toBottomOf="@+id/sensor_state_name_frag"
        app:layout_constraintVertical_bias="0.567" />
</android.support.constraint.ConstraintLayout>