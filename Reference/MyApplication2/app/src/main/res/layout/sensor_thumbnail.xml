<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/sensor_state_name_frag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="24dp"
        android:text="@string/NoSensor" />

    <TextView
        android:id="@+id/sensor_count_name_frag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/sensor_state_name_frag"
        android:layout_below="@+id/sensor_state_name_frag"
        android:layout_marginTop="13dp"
        android:text="@string/NoSensor" />

    <TextView
        android:id="@+id/sensor_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sensor_count_name_frag"
        android:layout_centerHorizontal="true"
        android:text="@string/NoSignal" />

    <TextView
        android:id="@+id/sensor_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sensor_count_name_frag"
        android:layout_centerHorizontal="true"
        android:text="@string/NoSignal" />

</RelativeLayout>