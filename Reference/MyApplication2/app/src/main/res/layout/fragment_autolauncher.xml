<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.myapplication.Module.AutoLauncherModule.ChangeActivity">

    <TextView
        android:id="@+id/am_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A.M. Launch"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/am_auto_launch_app_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintTop_toBottomOf="@+id/am_text" />

    <TextView
        android:id="@+id/am_auto_launch_app_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@+id/am_auto_launch_app_icon"
        app:layout_constraintLeft_toRightOf="@+id/am_auto_launch_app_icon"
        app:layout_constraintBottom_toBottomOf="@+id/am_auto_launch_app_icon"/>

    <Button
        android:id="@+id/am_change_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/am_auto_launch_app_icon"
        app:layout_constraintBottom_toBottomOf="@+id/am_auto_launch_app_icon"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/pm_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P.M. Launch"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/am_auto_launch_app_icon" />

    <ImageView
        android:id="@+id/pm_auto_launch_app_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintTop_toBottomOf="@+id/pm_text" />

    <TextView
        android:id="@+id/pm_auto_launch_app_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@+id/pm_auto_launch_app_icon"
        app:layout_constraintLeft_toRightOf="@+id/pm_auto_launch_app_icon"
        app:layout_constraintBottom_toBottomOf="@+id/pm_auto_launch_app_icon"/>

    <Button
        android:id="@+id/pm_change_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/pm_auto_launch_app_icon"
        app:layout_constraintBottom_toBottomOf="@+id/pm_auto_launch_app_icon"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
